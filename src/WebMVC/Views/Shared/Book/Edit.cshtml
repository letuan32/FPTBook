@model WebMVC.Models.Books.Requests.BookUpdateVm

@{
    ViewBag.Title = "Edit Book";
    Layout = "_Layout";
}

<div style="margin-top: 50px">
    <div class="d-flex justify-content-center" style="justify-items:center">
        <h1>Create Book</h1>
    </div>
    <div class="row">
        <div class="col-md-4">
           
            <img src="@Model.ImageUrl" alt=""/>
        </div>
        <div class="col-md-8">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ImageUrl" type="hidden"/>
                <input asp-for="Id" type="hidden"/>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="Name" class="form-control"/>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" cols="30" name="description" rows="10"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control"/>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control"/>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label"></label>
                            <div class="input-group">
                                <select id="categories" asp-for="@Model.CategoryId" name="categoryId" asp-items="Model.Categories" class="form-select">
                                </select>
                            </div>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary"/>
                    <a
                        asp-action="Index" value="Cancel" class="btn btn-primary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $('#categories').val("@Model.CategoryId")
    </script>
    
}
