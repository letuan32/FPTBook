@model WebMVC.ViewModels.Books.Responses.BookDetailVm

@{
    ViewData["Title"] = "Detail";
    Layout = "_Layout";
}


<div style="margin-top: 50px">
    <div>
        <a href="@ViewBag.PreUrl">
            <span>Back to previous list</span>
        </a>
    </div>
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>
            <h6 class="card-subtitle">Category: @Model.Category</h6>
            <div class="row">
                <div class="col-lg-4 col-md-5 col-sm-6">
                    <div class="white-box">
                        <img src="@Model.ImageUrl" class="img-thumbnail" alt="book image">
                    </div>
                </div>
                <div class="col-lg-8 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Book description</h4>
                    <p>@Model.Description</p>
                    <h2 class="mt-5">
                        @Model.Price VND<small class="text-success"></small>
                    </h2>
                    <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                        <i class="material-icons">
                            shopping_cart
                        </i>
                    </button>
                    <button class="btn btn-primary btn-rounded">Buy Now</button>
                    @*     <h3 class="box-title mt-5">Key Highlights</h3> *@
                    @* <ul class="list-unstyled"> *@
                    @*     <li><i class="fa fa-check text-success"></i>Sturdy structure</li> *@
                    @*     <li><i class="fa fa-check text-success"></i>Designed to foster easy portability</li> *@
                    @*     <li><i class="fa fa-check text-success"></i>Perfect furniture to flaunt your wonderful collectibles</li> *@
                    @* </ul> *@
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                            <tr>
                                <td width="390">Name</td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td>Category</td>
                                <td>@Model.Category</td>
                            </tr>
                            <tr>
                                <td>Quantity</td>
                                <td>@Model.Quantity</td>
                            </tr>
                            <tr>
                                <td>Total Sales</td>
                                <td>@Model.TotalSales</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{

    <style>
        body{
            background-color: #edf1f5;
            margin-top:20px;
        }
        .card {
            margin-bottom: 30px;
        }
        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid transparent;
            border-radius: 0;
        }
        .card .card-subtitle {
            font-weight: 300;
            margin-bottom: 10px;
            color: #8898aa;
        }
        .table-product.table-striped tbody tr:nth-of-type(odd) {
            background-color: #f3f8fa!important
        }
        .table-product td{
            border-top: 0px solid #dee2e6 !important;
            color: #728299!important;
        }
    </style>
}